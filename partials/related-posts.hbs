<div>
    {{#get "posts" limit="4" filter="tags:[{{post.tags}}]+id:-{{post.id}}" include="tags,authors" as |related|}}
        {{#if related}}
        <section>
            <h3>
                <span class="text">{{t "You might also like..."}}</span>
            </h3>
            <div>
                {{#foreach related}}
                    {{> "loop"}}
                {{/foreach}}
            </div>
        </section>
        {{/if}}
    {{/get}}
</div>