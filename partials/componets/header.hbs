<header style="background-image: url({{@site.cover_image}})" class="site-header animated fadeIn">
    <div class="header-top">
        {{navigation}}
    </div>
    <div class="header-middle">
        <div class="header-middle-content animated fadeInUp">
            {{#if @site.logo}}
                <img src="{{@site.logo}}" alt="{{@site.title}}" />
            {{else}}
                {{@site.title}}
            {{/if}}
            <nav class="site-social-navigation">
                <ul>
                    {{> custom/social-icon}}
                </ul>
            </nav>
        </div>
    </div>
    <a class="indicator">
        <i class="fa fa-angle-down"></i>
    </a>
</header>
